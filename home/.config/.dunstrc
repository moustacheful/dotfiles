[global]
    font = "Roboto 10"
    allow_markup = yes
    format = "<b>%s</b>\n%b"
    geometry = "350x5-20+20"
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    transparency = 10
    monitor = 0
    follow = mouse
    separator_height = 2
    padding = 16
    horizontal_padding = 16
    separator_color = "#3a3a3a"
    startup_notification = false
    # https://github.com/knopwob/dunst/issues/26#issuecomment-36159395
    icon_position = left
    max_icon_size = 32

[shortcuts]
    close_all = mod4+escape
    history = ctrl+h
    context = ctrl+shift+a

[urgency_low]
    background = "#000000"
    foreground = "#FAFAFA"
    timeout = 10

[urgency_normal]
    background = "#000000"
    foreground = "#FAFAFA"
    timeout = 20

[urgency_critical]
    background = "#000000"
    foreground = "#E3C7AF"
    timeout = 0