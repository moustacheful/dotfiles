[
  {
    "name": "Area screenshot",
    "command": "gnome-screenshot -a"
  },
  {
    "name": "Window screenshot",
    "command": "gnome-screenshot -w"
  },
  {
    "name": "Start redshift",
    "command": "redshift"
  },
  {
    "name": "Stop redshift",
    "command": "pkill -f redshift"
  },
  {
    "name": "Power off",
    "confirm": true,
    "command": "systemctl poweroff"
  },
  {
    "name": "Reboot",
    "confirm": true,
    "command": "systemctl reboot"
  },
  {
    "name": "Suspend",
    "confirm": true,
    "command": "i3lock -c 222222 && systemctl suspend"
  },
  {
    "name": "Lock",
    "command": "i3lock"
  },
  {
    "name": "Reload dunst",
    "command": "pkill dunst && dunst -config ~/.config/.dunstrc & notify-send 'Dunst reloaded'"
  },
  {
    "name": "Pause notifications",
    "command": "notify-send DUNST_COMMAND_PAUSE"
  },
  {
    "name": "Resume notifications",
    "command": "notify-send DUNST_COMMAND_RESUME"
  },
  {
    "name": "Single monitor",
    "command": "xrandr --output eDP1 --mode 1920x1080 --pos 0x0 --rotate normal  --output HDMI1 --off"
  },
  {
    "name": "Extend monitor",
    "command": "xrandr -d :0 --auto && xrandr --output eDP1 --mode 1920x1080 --pos 0x1080 --rotate normal  --output HDMI1 --mode 1920x1080 --pos 0x0 --rotate normal"
  },
  {
    "name": "Mirror monitor",
    "command": "xrandr -d :0 --auto && xrandr --output eDP1 --mode 1920x1080 --pos 0x0 --rotate normal  --output HDMI1 --mode 1920x1080 --pos 0x0 --rotate normal"
  }
]
